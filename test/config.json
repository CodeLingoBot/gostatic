{
    "templates": ["template.tmpl"],
    "source": "site",
    "output": "out",
    "rules": {
        "tag.md": ["ignore"],
        "*.tag": ["rename *.html", "directorify", "inner-template"],
        "*.md": ["config", "rename *.html", "directorify", "tags tag.md",
                 "inner-template"],
        "*.md1": ["config", "rename *.html", "directorify",
                 "inner-template", "markdown", "template"],
        "*.html": ["directorify", "template page"],
        "*.less": [":lessc -", "rename *.css"],
        "*.js": ["ignore"]
    }
}
