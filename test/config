# -*- mode: makefile -*-

TEMPLATES = template.tmpl
SOURCE = site
OUTPUT = out

*.md:
	config
	rename *.html
	directorify
	tags tag
	inner-template
	markdown
	template

blog/index.md: blog/*.md
	config
	rename *.html
	directorify
	inner-template
	markdown
	template

index.md: blog/index.md
	config
	rename *.html
	directorify
	inner-template
	markdown
	template

*.less:
	rename *.css
	:lessc -

*.html:
	directorify
	template page

*.tag: blog/*.md
	rename *.html
	directorify
	template tag
	markdown
	template page
