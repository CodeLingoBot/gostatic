# -*- mode: makefile -*-

TEMPLATES = template.tmpl
SOURCE = site
OUTPUT = out

*.md:
	config
	rename *.html
	directorify
	tags tag.md
	inner-template
	markdown
	template

/blog/index.md: blog/*.md
	config
	rename *.html
	directorify
	inner-template
	markdown
	template

/index.md: blog/index.md
	config
	rename *.html
	directorify
	inner-template
	markdown
	template

/tag.md:
	ignore

*.less:
	rename *.css
	:lessc -

*.html:
	directorify
	template page

*.tag: blog/*.md
	rename *.html
	directorify
	inner-template
	markdown
	template page
